{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "ES2022",
        "isolatedModules": true,
        "moduleDetection": "force",
        // linting
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "lib": [
            "ES2023"
        ]
    },
    "include": [
        "main.wasp.ts",
        "wasp_modules/**/*.ts"
    ]
}